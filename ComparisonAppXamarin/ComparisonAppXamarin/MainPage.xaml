<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ComparisonAppXamarin.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Hello World from Xamarin Forms" HorizontalTextAlignment="Center" TextColor="White" FontSize="24"/>
        </Frame>
        <AbsoluteLayout Padding="0" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
            <BoxView Color="White" AbsoluteLayout.LayoutBounds="0, 0, 1, 1" AbsoluteLayout.LayoutFlags="All" />
            <StackLayout Orientation="Vertical" AbsoluteLayout.LayoutBounds="0.5, 0.5, -1, -1" AbsoluteLayout.LayoutFlags="PositionProportional">
                <Button Text="Click Me !" HorizontalOptions="Center" VerticalOptions="Center" Clicked="ButtonClick"></Button>
                <Label x:Name="countLabel" Text=""></Label>
                <Button Text="Reset Counter" HorizontalOptions="Center" VerticalOptions="Center" Clicked="ResetCounter"></Button>
            </StackLayout>
        </AbsoluteLayout>
    </StackLayout>
     
</ContentPage>
